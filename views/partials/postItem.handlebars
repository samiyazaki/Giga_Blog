<div class ="card">
    <div class ="card-header flex-row justify-space-between">
        <h2>
            <a href="/post/{{id}}">
            <div class ="col-9">{{postTitle}}</div>
            </a>
        </h2>
        <div class ="col-3">Blog Post By: {{user.username}} on {{format_date dateCreated}}
        </div>
    </div>
    <p class ="card-body2">
        <span class ="comment-content">{{postContent}}</span>
        <span class ="comment-date">{{format_date dateCreated}}</span>
    </p>
</div>