<div class="card">
    <div class="card-header flex-row justify-space-between">
        <h2>
            <a href="/post/{{id}}">
                <div class="col-9">{{postTitle}}</div>
                </a>
        </h2>
        <div class="col-3">Blog Post By: {{user.username}} on {{format_date dateCreated}}
            </div>
    </div>
    <p class="card-body2">
        <span class="comment-content">{{postContent}}</span>
        <span class="comment-date">{{format_date dateCreated}}</span>
        <span class="comment-author">{{user.username}}</span>
    </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>
<div class="card">
    <div class="card-header"></div>
    <form class="card-body" id="new-content-form">
        <p class="form-label"> Comment:</p>
        <textarea class="form-input" name="comment-content" rows="3"></textarea>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {{> comments post.comments}}
</div>
<script src="/js/comment.js"></script>