<div class ="card">
    <h2 class ="card-header">Edit Post</h2>
    <form class ="card-body" id ="edit-post-form">
        <div class ="form-group">
            <label for ="post-title">Post Title</label>
            <input type ="text" class ="form-control" id ="post-title" name ="post-title" value ="{{postTitle}}">
        </div>
        <div class ="form-group">
            <label for ="post-content">Post Content</label>
            <textarea class ="form-control" id ="post-content" name ="post-content" rows ="3">{{postContent}}</textarea>
        </div>
        <button class="btn btn-primary" type ="submit">Edit</button>
        <input type="hidden" name="post-id" value ="{{post.id}}"/>
        </form>
        <div class ="card-body">
            <button class="btn btn-primary" type="click" id="delete-post">Delete</button>
        </div>      
</div>
<script src="/js/edit.js"></script>